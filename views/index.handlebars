<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 text-center" id="top-bar">
      <h1>Bob's Burgers</h1>
    </div>
    <div class="col-md-3"></div>
  </div>

<!-- header section end -->

<div class="row">
    <div class="col-md-6 text-center" class="task">
      <h3>Menu</h3>
        {{#each burger_data}}
          {{#unless this.devoured}}
        <!-- <div class="col-md-9 text-center"> -->
          <pre>{{this.id}}. {{this.burger_name}}</pre>
        <!-- </div> -->
          <div id="devourButton" class="text-center">
            <form method="POST" action="/burgers/update?_method=PUT"
            class="button-size">
              <input type="hidden" name="id" type="text"
              value={{this.id}}>
              <br>
              <button type="submit" class="btn btn-default text-center">
              DEVOUR IT!</button>
            </form>
          </div>
          {{/unless}}
          {{/each}}
      </div>

    <div class="col-md-6 text-center" class="task">
      <h3>Burgers Eaten</h3>
      {{#each burger_data}}
        {{#if this.devoured}}
          <input class="form-control" type="text" placeholder=
          "{{this.id}}. {{this.burger_name}}" readonly>
        {{/if}}
      {{/each}}
  </div>

</div>

</div>


<div class="container">
  <div class="row">
      <div class="col-md-3"></div>
    <div class="col-md-6 text-center enter_section">
    <form action="/burgers/create" method="POST">
      <input type="text" name="burger_name" class="form-control"
      value="" id="enter_text">
      <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
    </form>
    <p>Enter in a burger you would like to eat!</p>
  </div>
    <div class="col-md-3"></div>
</div>
</div>
